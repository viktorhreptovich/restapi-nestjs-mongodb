{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "preset": "ts-jest",
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": [
    "./setup-tests.ts"
  ],
  "testTimeout": 60000,
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "./html-report-e2e",
        "filename": "index.html",
        "openReport": false
      }
    ]
  ]
}
